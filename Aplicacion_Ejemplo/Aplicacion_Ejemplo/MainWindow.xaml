<Window x:Class="Aplicacion_Ejemplo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aplicacion_Ejemplo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,0,-6" Background="#FFEEE9E9">
        <Rectangle x:Name="Bloque_txt" 
           RadiusX="20" RadiusY="20" Stroke="#FF636365" StrokeThickness="2" Margin="252,77,244,47" Fill="White"/>
        <Image x:Name="hola" HorizontalAlignment="Center" Height="40" Margin="0,93,0,0" VerticalAlignment="Top" Width="36" Source="/Logo_2.png"/>
        <TextBlock x:Name="txt_titulo" HorizontalAlignment="Center" Margin="0,134,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FF2244ED"><Run Language="es-cl" Text="Mi Sala UDD"/></TextBlock>
        <TextBlock x:Name="No_se" HorizontalAlignment="Center" Margin="0,155,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.4,-1.088" Width="150" Height="34" Foreground="#FF837F7F"><Run Text="Sistema de Gestion de Salas"/><LineBreak/><Run Language="es-cl" Text="Universidad del Desarollo"/></TextBlock>
        <TextBox x:Name="txt_correo" HorizontalAlignment="Left" Margin="272,205,0,0" TextWrapping="Wrap" Text="Usuario@udd.cl" VerticalAlignment="Top" Width="120" TextChanged="txt_correo_TextChanged"/>
        <TextBlock HorizontalAlignment="Left" Margin="271,189,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"><Run Text="Correo Electro"/><Run Text="nico"/><Run Language="es-cl" Text=":"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="273,235,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="119"><Run Language="es-cl" Text="Contraseña:"/></TextBlock>
        <TextBox HorizontalAlignment="Left" Margin="273,256,0,0" TextWrapping="Wrap" Text="**********" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
        <Button x:Name="btn_iniciar_sesion" Content="Iniciar Sesión" HorizontalAlignment="Center" Margin="0,288,0,0" VerticalAlignment="Top" Width="256" Background="#FF4C4AE6" BorderBrush="#FF0B0B0B" Foreground="White" Height="27"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,320,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80"><Run Language="es-cl" Text="Prueba con:"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="282,341,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="206"><Run Language="es-cl" Text="&#x9;Alumno@udd.cl (Estudiantes)"/></TextBlock>
        <TextBlock Margin="331,362,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="-0.536,0.04" Width="167" HorizontalAlignment="Left"><Run Language="es-cl" Text="Profesor@udd.cl (Profesores)"/></TextBlock>
    </Grid>
</Window>
